@model Plataforma.Ui.OrgTs.ViewModel.Sistema.GrupoUsuarioViewModel
@{
    Layout = null;

    Grupo_Usuario dadosGrupoUsuario = Model.grupoUsuario ?? new Grupo_Usuario();

    // Botões para o menu detalhes da aba solicitada
    string[,] menuDetalhes = new string[,]
    {
        {"salvar", "" }, { "cancelar", "grupousuario/grupousuario-aba"}, {"incluir","" }, {"excluir","" }, {"editar" , ""}
    };

    // Dados postados para a montagem do menu sendo:
    // Um ID qualquer (usuario, conta, produto) para verificação de informações (ver se o form será vazio)
    // Um array com os dados do menu
    object[] dadosMenu = new object[] { dadosGrupoUsuario.id, menuDetalhes };
}
<section class="conteudo-aba">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <h1>Grupo de Usuário</h1>
            </div>
            <partial name="menus/MenuDetalhes" model='dadosMenu' />
        </div>
    </div>
    <div class="row">
        <div></div>
    </div>
    <div class="row">
        <form class="col-lg-12 col-md-12 col-sm-12" action="grupousuario/grupousuario-aba">
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group col-md-12">
                        <label for="grupo">Grupo</label><br />
                        <select class="select-titan" name="grupo" data-live-search="true" id="grupo" disabled>
                            @foreach (var itens in Model.listagrupo)
                            {
                                if (itens.id == dadosGrupoUsuario.id_grupo)
                                {
                                    <option value="@itens.id" selected>@itens.nome</option>
                                }
                                else
                                {
                                    <option value="@itens.id">@itens.nome</option>
                                }
                            }
                        </select>
                    </div>

                </div>
            </div>
        </form>
    </div>
</section>