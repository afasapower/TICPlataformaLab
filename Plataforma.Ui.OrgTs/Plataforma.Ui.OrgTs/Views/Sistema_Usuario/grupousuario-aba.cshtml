@model Plataforma.Ui.OrgTs.ViewModel.Sistema.UsuarioViewModel
@{
    Layout = null;

    Grupo_Usuario dadosGrupoUsuario = Model.grupo_usuario ?? new Grupo_Usuario();

    List<Grupo> dadosgrupo = Model.listagrupo;

    // Botões para o menu detalhes da aba solicitada
    BtMenuDetalhes dadosMenu = new BtMenuDetalhes()
    {
        listaPermissoesMenuUtilitarios = new List<Retorno_Permissao_Grupo_Usuario>(),
        ListaMenuDetalhes = new List<MenuDetalhes>()
        {
            new MenuDetalhes(){Id = dadosGrupoUsuario.id, Tipo = "salvar", Visivel = true},
            new MenuDetalhes(){Id = dadosGrupoUsuario.id, Tipo = "cancelar", Visivel = true, Url = "Sistema_Usuario/grupousuario-aba"},
            new MenuDetalhes(){Id = dadosGrupoUsuario.id, Tipo = "incluir", Visivel = true},
            new MenuDetalhes(){Id = dadosGrupoUsuario.id, Tipo = "deletar", Visivel = true},
            new MenuDetalhes(){Id = dadosGrupoUsuario.id, Tipo = "atualizar", Visivel = true}
        }
    };
}
<section class="conteudo-aba">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <h1>Grupo de Usuário</h1>
            </div>
            <partial name="menus/MenuDetalhes" model='dadosMenu' />
        </div>
    </div>
    <div class="row">
        <div></div>
    </div>
    <div class="row">
        <form class="col-lg-12 col-md-12 col-sm-12" action="Sistema_Usuario/grupousuario-aba">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-8">

                    <div class="form-group col-md-12">
                        <label for="id_grupo">Grupo</label><br />
                        <select class="select-titan" name="id_grupo" tabindex="1" data-width="50%" id="id_grupo" disabled>
                            <option value="">Selecione um grupo</option>
                            @foreach (var itens in dadosgrupo)
                            {
                                if (itens.id == dadosGrupoUsuario.id_grupo)
                                {
                                    <option value="@itens.id" selected>@itens.nome</option>
                                }
                                else
                                {
                                    <option value="@itens.id">@itens.nome</option>
                                }
                            }
                        </select>
                    </div>

                </div>
            </div>
        </form>
    </div>
</section>